<div>
  <div>
    <div>
      <h1>ユーザー登録</h1>
      <%= form_with model: @user do |f| %>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
        <div>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>
        <%= f.submit "登録" %>
      <% end %>
    </div>
  </div>
</div>
