<div>
  <div>
    <div>
      <h1>ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>
        <div>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <%= f.submit "ログイン" %>
      <% end %>
      <%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete } %>
    </div>
  </div>
</div>
