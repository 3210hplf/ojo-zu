<div class="navbar bg-base-100">
  <div class="navbar-start">
  </div>
  <div class="navbar-center">
    <%= link_to "おじょうず👏", root_path, class: "btn btn-ghost text-xl" %>
  </div>
  <div class="navbar-end">
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="inline-block h-5 w-5 stroke-current">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </div>
      <% if logged_in? %>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
            <li><%= link_to "プロフィール編集", edit_profile_path(current_user.profile) %></li>
            <li><%= link_to "ログアウト", logout_path, data: { turbo_method: :delete } %></li>
        </ul>
      <% else %>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
          <li><%= link_to "ユーザー登録", new_user_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>