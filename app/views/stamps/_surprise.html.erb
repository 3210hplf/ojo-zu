<% if post.stamps.where(user_id: current_user.id, stamp_type: 'surprise').exists? %>
  <%= link_to stamp_path(current_user.stamps.find_by(post_id: post.id, stamp_type: 'surprise')), data: { turbo_method: :delete } do %>
    <span>😳</span><%= post.stamps.where(stamp_type:'surprise').count %>
  <% end %>
<% else %>
  <%= link_to post_stamps_path(post_id: post.id, stamp_type: 'surprise'), data: { turbo_method: :post } do %>
    <span>😳</span><%= post.stamps.where(stamp_type:'surprise').count %>
  <% end %>
<% end %>